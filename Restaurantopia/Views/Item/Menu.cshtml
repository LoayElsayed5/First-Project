@model IEnumerable<Restaurantopia.Entities.Models.Item>

@{
    ViewData["Title"] = "Menu";
    Layout = "_MenuLayout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="container">
    <div class="row mb-4">
        <!-- Centered Menu Heading -->
        <div class="heading-section ftco-animate mb-5 text-center">
            <div class="col-md-12 text-center heading-section ftco-animate">
                <span class="subheading">Menu</span>
                <h2 class="mb-4">Available Items</h2>
            </div>
        </div>

        <!-- Category Filter Dropdown -->
        <div class="col-md-12 mb-3">
            <form asp-action="Menu" method="get" class="d-inline">
                <div class="input-group">
                    <select name="categoryId" class="form-select" onchange="this.form.submit()">
                        <option value="0">All Categories</option>
                        @foreach (var cat in ViewBag.C_s)
                        {
                            <option value="@cat.Id">
                                @cat.CategoryName
                            </option>
                        }
                    </select>
                </div>
            </form>
        </div>

        <!-- Search by Name -->
        <div class="col-md-12 mb-3">
            <form asp-action="Menu" method="get" class="d-inline">
                <div class="input-group">
                    <input type="text" name="searchQuery" class="form-control" placeholder="Search by Item Name" value="@ViewBag.SearchQuery" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>

        <!-- Create New Button -->
        <div class="col-md-12 text-end">
            <a asp-action="Create" class="btn btn-success mb-3">Create New</a>
        </div>
    </div>

    <div class="heading-section ftco-animate mb-5 text-center">
        <h2 class="mb-4">@ViewBag.SelectedCategoryName</h2>
    </div>

    <!-- Dynamic Menu Card Section -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm card-hover">
                    <a href="/Item/Details/@item.Id" class="text-decoration-none">
                        <img src="/images/breakfast-1.jpg" class="card-img-top" alt="@item.ItemTitle" style="height: 200px; object-fit: cover;">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between mb-3">
                            <h5 class="card-title">
                                @item.ItemTitle (@foreach (var cat in ViewBag.C_s)
                                {
                                    if (cat.Id == item.CategoryId)
                                    {
                                        @cat.CategoryName
                                        break;
                                    }
                                })
                            </h5>
                            <h5 class="text-muted">
                                <span>$@String.Format("{0:0.00}", item.ItemPrice)</span>
                            </h5>
                        </div>
                        <p class="card-text text-truncate">@item.ItemDescription</p>
                        <div class="mt-auto">
                            <a href="/Item/Order/@item.Id" class="btn btn-success mt-2">
                                <i class="fas fa-shopping-cart"></i> Order now
                            </a>
                            <a href="/Item/Edit/@item.Id" class="btn btn-warning mt-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="/Item/Delete/@item.Id" class="btn btn-danger mt-2">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.Count() % 3 != 0)
        {
            <div class="w-100"></div>
        } <!-- Ensures alignment for grid system -->
    </div>
</div>

<style>
    /* Optional custom styles for buttons */
    .btn-success {
        background-color: green; /* Bootstrap success color */
        border: none;
    }

    .btn-warning {
        background-color: #ffc107; /* Bootstrap warning color */
        border: none;
    }

    .btn-danger {
        background-color: #dc3545; /* Bootstrap danger color */
        border: none;
    }

    /* Animation styles for card hover effect */
    .card-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card-hover:hover {
            transform: scale(1.05); /* Scale up the card slightly */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Add shadow on hover */
        }
</style>
