@model Restaurantopia.Entities.Models.OrderDetails

@{
    ViewData["Title"] = "Order Details";
    Layout = "_MenuLayout"; // Assuming you want the same layout as the Edit view
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    /* Button styles with hover animations */
    .btn {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.05); /* Slightly increase button size on hover */
    }

    .btn-primary i,
    .btn-secondary i {
        margin-right: 5px; /* Space between the icon and the text */
    }

    .heading-section {
        margin-bottom: 20px;
        text-align: center;
    }
</style>

<div class="heading-section ftco-animate mb-5 text-center">
    <span class="subheading">Order Details</span>
    <h2 class="mb-4">Order ID: @Model.Id</h2>
</div>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@Model.Item.ItemTitle</h5>

                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Total)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Total)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Item.ItemImage)
                    </dt>
                    <dd class="col-sm-8">
                        <img src="@Url.Content(Model.Item.ItemImage ?? "/images/default-placeholder.png")" alt="Item Image" width="200px" />
                    </dd>
                </dl>

                <div class="form-group mt-4 text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary mt-2" }) |
                    <a asp-action="Index" class="btn btn-secondary mt-2">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add any custom JavaScript here if necessary
</script>
