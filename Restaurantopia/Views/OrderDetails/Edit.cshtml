@model Restaurantopia.Entities.Models.OrderDetails

@{
    ViewData["Title"] = "Edit";
    Layout = "_MenuLayout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="heading-section ftco-animate mb-5 text-center">
    <span class="subheading">Edit Order Details</span>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <!-- Card for Edit Order Details -->
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Editing Order for Item: @Model.Item.ItemTitle</h5> <!-- Assuming you have an ItemName property -->

                <div class="form-group">
                    <label>Item Description</label>
                    <p>@Model.Item.ItemDescription</p> <!-- Assuming you have an ItemDescription property -->
                </div>

                <div class="form-group">
                    <label>Price</label>
                    <p>$@String.Format("{0:0.00}", Model.Item.ItemPrice)</p> <!-- Assuming you have an ItemPrice property -->
                </div>

                <div class="form-group">
                    <img src="/images/breakfast-1" alt="Item Image" class="img-fluid mb-3" style="object-fit: cover; height: 200px; width: auto;" onerror="this.onerror=null; this.src='~/Images/default-image.jpg';" /> <!-- Assuming you have an ItemImage property -->
                </div>

                <form asp-action="Edit">
                    @Html.HiddenFor(model => model.Id) <!-- Include the Order ID for submission -->

                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label">Quantity</label>
                        <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <!-- Submit Button -->
                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Save" class="btn btn-primary mt-2" />
                        <a asp-action="Index" class="btn btn-secondary mt-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // You can add any additional JavaScript here if needed
</script>
