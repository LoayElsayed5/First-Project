@model Restaurantopia.Entities.Models.Review

@{
    ViewData["Title"] = "Add";
}

<div class="row">
    <div class="col-md-4" id="feedback">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Comment" class="form-control" placeholder="Comment" />
                <label asp-for="Comment" class="control-label"></label>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Rate" class="form-control custom-dropdown">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <label asp-for="Rate" class="control-label"></label>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Date" class="form-control" placeholder="Date" />
                <label asp-for="Date" class="control-label"></label>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="CustomerId" class="form-control" placeholder="CustomerId" />
                <label asp-for="CustomerId" class="control-label"></label>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group float-end">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Add">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync ( "_ValidationScriptsPartial" );
    }
}
<style>
    /* Center the feedback message on the page */
    #feedback {
        margin: 20px auto;
        padding: 15px;
        width: 50%;
        text-align: center;
        font-size: 18px;
        font-weight: bold;
    }

    .custom-dropdown {
        appearance: none; /* Removes the default arrow in some browsers */
        -webkit-appearance: none;
        -moz-appearance: none;
        background-color: #f8f9fa; /* Light background color */
        border: 1px solid #ced4da; /* Border color */
        padding: 10px 12px; /* Padding inside the dropdown */
        font-size: 16px; /* Font size */
        line-height: 1.5; /* Line height */
        border-radius: 5px; /* Rounded corners */
        width: 100%; /* Make the dropdown width match the form */
        transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .custom-dropdown:focus {
            border-color: #80bdff; /* Border color on focus */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Shadow effect on focus */
            outline: none; /* Removes the default outline */
        }

        .custom-dropdown option {
            background-color: #ffffff; /* Option background */
            color: #000000; /* Option text color */
        }

</style>
